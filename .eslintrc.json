{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "semi": [2, "never"],
    "quotes": [2, "single"],
    "no-alert": 0,
    "no-console": "off",
    "no-const-assign": 2,
    "no-duplicate-case": 2,
    "no-multi-spaces": 1,
    "camelcase": [
      2,
      {
        "properties": "never",
        "ignoreDestructuring": true
      }
    ]
  }
}
